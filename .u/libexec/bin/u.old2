_pull()
{
    # TODO: If there are any remotes that are not installed, ask if the user want to install them, or continue and only pull the already installed remotes. If the user does want to install the missing remotes, install them, remove them from the list of remotes to pull since it's redundant, then pull the already existing remotes, if any.

    # TODO: Handle the `all` and `default` cases.

    _ensure_valid_remote_names "${@}"

    # TODO: Write logic to only add lines that do not already exist in `_remote_names`.
    _add_new_remotes()
    {
        for \
            _remote_name in ${1}
        do
            # Skip if `_remote_name` is already in `_remote_names`.
            # TODO: Escape `sed` special characters in `_remote_name`.
            if
                test -n "$(printf "%s\n" "${_remote_names}" | sed -n "/^${_remote_name}$/p" 2> /dev/null)"
            then
                continue
            fi

            _remote_names="${_remote_names}$(printf "%s\n" "${_remote_name}")"
        done
    }

    for \
        _arg in "${@}"
    do
        if
            test "${_arg}" = "-a" \
            || test "${_arg}" = "--all"
        then
            set --

            for \
                _remote_dir in "${U_DIR}/config/u/remotes" "${U_DIR}/local/config/u/remotes"
            do
                if
                    cd "${_remote_dir}" 2> /dev/null
                then
                    for \
                        _remote_name in *
                    do
                        if
                            test -d "${_remote_name}"
                        then
                            _remote_names="${_remote_names}$(printf "%s\n" "${_remote_name}")"
                        fi
                    done
                fi
        done

            break
        fi
    done

    _remote_names=""

    for \
        _arg in "${@}"
    do
        if
            test -f "${U_DIR}/config/u/remotes/${_arg}.conf"
        then
            _add_new_remotes \
                "$(
                    # shellcheck disable=SC2312
                    sed \
                        "/^ *$/d; /^ *#/d; s/^ *//; s/ *$//" \
                        "${U_DIR}/config/u/remotes/${_arg}.conf"
                )"
        elif
            test -d "${U_DIR}/config/u/remotes/${_arg}"
        then
            _add_new_remotes "${_arg}"
        elif
            test -f "${U_DIR}/local/config/u/remotes/${_arg}.conf"
        then
            _add_new_remotes \
                "$(
                    # shellcheck disable=SC2312
                    sed \
                        "/^ *$/d; /^ *#/d; s/^ *//; s/ *$//" \
                        "${U_DIR}/local/config/u/remotes/${_arg}.conf"
                )"
        elif
            test -d "${U_DIR}/local/config/u/remotes/${_arg}"
        then
            _add_new_remotes "${_arg}"
        fi
    done
}

